<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_meetings"
    android:layout_width="match_parent"

    android:layout_height="?android:attr/listPreferredItemHeightLarge">

    <!--    android:background="@drawable/border" -->
    <LinearLayout
        android:id="@+id/texts_blocs"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_status"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_meeting"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/image_status"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingTop="8sp"
            android:text="@string/meeting_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_meeting"
            android:layout_toEndOf="@id/item_meeting"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingTop="8sp"
            android:text="@string/meeting_start"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_meeting"
            android:layout_toEndOf="@id/item_time"
            android:clipToOutline="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingTop="8sp"
            android:text="@string/meeting_room"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/image_status"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:maxWidth="280dp"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:text="Essais texte liste des utilisateurs et cela peut bien dÃ©border"

        android:textSize="16sp" />


    <ImageView
        android:id="@+id/image_status"
        android:layout_width="47dp"
        android:layout_height="48dp"
android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="12dp"
        android:background="@color/black"
        android:clickable="true"
        android:contentDescription="Icon"
        android:tooltipText="@string/meeting_room"
        app:srcCompat="@drawable/round"

        />

    <ImageView
        android:id="@+id/image_remove"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/texts_blocs"
        android:clickable="true"

        android:contentDescription="Icon"
        android:focusable="true"
        android:tooltipText="delete_meeting"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</RelativeLayout>

